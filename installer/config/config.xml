<?xml version="1.0" encoding="UTF-8"?>
<Installer>
    <Name>DesktopLLMHelper</Name>
    <Version>1.0.0</Version>
    <Title>Desktop LLM Helper</Title>
    <Publisher>Avin Lambrero</Publisher>
    <StartMenuDir>DesktopLLMHelper</StartMenuDir>
    <ControlScript>controller.qs</ControlScript>
    <!-- Install into the per-user Programs folder under LocalAppData -->
    <TargetDir>@HomeDir@/AppData/Local/Programs/DesktopLLMHelper</TargetDir>
    <RemoveTargetDir>false</RemoveTargetDir>
    <RemoteRepositories>
        <!-- Add repository URLs here if you host packages remotely -->
    </RemoteRepositories>
</Installer>
